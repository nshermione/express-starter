  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run spa:dev",
      "name": "SPA client",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Api",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "env": {
        "NODE_APP": "api"
      },
      "program": "${workspaceFolder}\\apps\\api.mjs",
      "args": [

      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "env": {
        "NODE_APP": "web" 
      },
      "program": "${workspaceFolder}\\apps\\web.mjs",
      "args": [
        
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "SPA server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "env": {
        "NODE_APP": "spa" 
      },

      "program": "${workspaceFolder}\\apps\\spa.mjs",
      "args": [
        
      ]
    },
  
  ],
  "compounds": [
    {
      "name": "SPA",
      "configurations": ["SPA server", "SPA client"],
      "stopAll": true
    }
  ]
}